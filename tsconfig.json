{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "noEmitOnError": true,
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
